<div>
  <form action="/suggestions" method="post">
    <legend>New Suggestion</legend>

    <div class="form-group">
      <label for="suggestion-title">Title</label>
      <input type="text" name="title" class="form-control" id="suggestion-title" placeholder="Title">

      <label for="suggestion-title">Description</label>
      <input type="text" name="body" class="form-control" id="suggestion-body" placeholder="Description">
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
