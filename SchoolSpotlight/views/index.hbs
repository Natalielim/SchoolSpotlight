<header class = "parallax align-items-center">
  <h1>{{title}}</h1>
  <p>A direct way for students to suggest and vote on ways to improve their schools</p><br></br>
  <a href="/suggestions/new"><p class="new">Create New Suggestion</p></a>
  <a class="button" href="#suggestions"><p class="text-center" style="margin-top:10em;">▼</p></a>
</div>

</header>
  <div id="suggestions">
    <h1 class="title">Suggestions</h1>
    {{#each suggestions as |suggestion|}}
    <div class="row index justify-content-center">
    <ul style="list-style: none;">
      <li>
        <div class="card mb-3">
          <div class="card-body">
            <a class="card-title" href="/suggestions/{{suggestion.id}}">{{suggestion.title}}</a><br></br>
            <p class="text-left">{{suggestion.body}}</p>

            <div class="btn-group btn-group-sm">
              <form action="/suggestions/{{suggestion.id}}" method = "post" class="inline-form">
                <input type="hidden" name="title" id="suggestion-title" value="{{suggestion.title}}">
                <input type="hidden" name="body" id="suggestion-body" value="{{suggestion.body}}">

                <a href = "{{suggestion.petition}}">{{suggestion.petition}}</a>
                <input type="hidden" name="points" id="suggestion-points">
                <div id = "vote" class = "row align-items-center justify-content-center">
                  <button type="submit" class="upvote-button" >✔️</button>
                  <span>
                    <p id = "agree">{{suggestion.points}} agree</p>
                  </span>
                </div>
